# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret

# AI Configuration (one of these is required)
OPENAI_API_KEY=sk-your-openai-api-key
# ANTHROPIC_API_KEY=sk-ant-your-api-key

# AI Model Settings (Optional)
# AI_MODEL=gpt-4o-mini
# AI_MAX_TOKENS=4096

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-gcp-project-id
PUBSUB_TOPIC=summary-jobs

# Application Settings
ENVIRONMENT=development
TARGET_YEAR=2025

# Locale Settings (en_US or ja_JP)
LOCALE=en_US

# Workspace Configuration (Optional)
# Comma-separated list of channel names or IDs to include
# If empty, all joined channels are used
INCLUDE_CHANNELS=

# Comma-separated list of channel names or IDs to exclude
EXCLUDE_CHANNELS=general,random

# Include private channels (default: false, use --private flag to include)
INCLUDE_PRIVATE_CHANNELS=false

# Include direct messages (default: false)
INCLUDE_DIRECT_MESSAGES=false

# Include group direct messages (default: false)
INCLUDE_GROUP_MESSAGES=false
