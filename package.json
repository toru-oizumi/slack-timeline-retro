{
  "name": "slack-timeline-retro",
  "version": "1.0.0",
  "description": "Slack Activity Summary Tool - Hierarchical weekly/monthly/yearly summaries",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:tsc": "tsc --noEmit",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^3.0.1",
    "@hono/zod-validator": "^0.4.0",
    "@slack/web-api": "^7.0.0",
    "ai": "^4.0.0",
    "date-fns": "^4.1.0",
    "hono": "^4.6.0",
    "yaml": "^2.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.91.0"
  }
}
